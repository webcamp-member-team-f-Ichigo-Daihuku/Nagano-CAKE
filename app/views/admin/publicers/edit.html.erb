<div class="container">
  <div class="row">
    <div class="col">
      <h4 class="my-5"><%= @publicer.full_name %>さんの会員情報編集</h4>
      <table class="table table-borderless">
        <%= form_with model: @publicer, url: admin_publicer_path, method: :patch do |f| %>
        <tr>
          <td>会員ID</td>
          <td><%= @publicer.id %></td>
        </tr>

        <tr>
          <td>氏名</td>
          <td><%= f.text_field :last_name, autofocus: true, autocomplete: "family-name" %>　<%= f.text_field :first_name, autofocus: true, autocomplete: "given-name" %></td>
        </tr>

        <tr>
          <td>フリガナ</td>
          <td><%= f.text_field :last_name_kana, autofocus: true, autocomplete: "family-name" %>　<%= f.text_field :first_name_kana, autofocus: true, autocomplete: "given-name" %></td>
        </tr>

        <tr>
          <td>郵便番号</td>
          <td><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal-code" %></td>
          <td></td>
        </tr>

        <tr>
          <td>住所</td>
          <td><%= f.text_field :address, autofocus: true, autocomplete: "address" %></td>
          <td></td>
        </tr>

        <tr>
          <td>電話番号</td>
          <td><%= f.text_field :telephone_number, autofocus: true, autocomplete: "tel" %></td>
          <td></td>
        </tr>

        <tr>
          <td>メールアドレス</td>
          <td><%= f.text_field :email, autofocus: true, autocomplete: "email" %></td>
          <td></td>
        </tr>

        <tr>
          <td>会員ステータス</td>
          <td>
            <%= f.radio_button :is_active, :true %>
            <%= f.label :is_active, "有効", { value: :true }  %>

            <%= f.radio_button :is_active, :false %>
            <%= f.label :is_active, "退会", { value: :false } %>
          </td>
        </tr>

        <tr>
          <td></td>
          <td><%= f.submit "変更を保存", class:"btn btn-success" %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>