<div class = "container">
  <div class = "row">
    <div class = "col-md-8 mx-auto">
      <div class = "row">
       

          <h4>注文履歴一覧</h4>
          <div class="container">
            <table class = "table table-hover table-inverse mt-3">
              <thead>
                <tr>
                  <th>購入日時</th>
                  <th>購入者</th>
                  <th>注文個数</th>
                  <th>注文ステータス</th>
                </tr>
              </thead>
              <tbody>
                <% @orders.each do |order| %>
                 <tr>
                   <td><%= link_to order.created_at.strftime("%Y/%m/%d %H:%M"), admin_order_path(order.id) %></td>
                   <td><%= order.public.last_name %> <%= order.public.first_name %></td>
                     <td><%= order.order_details.sum(:amount) %></td>
                   <td><%= order.status_i18n %></td>
                 </tr>
                <% end %>
                
              </tbody>
            </table>
            <%= paginate @orders %>
          </div>
        
      </div>
    </div>
  </div>
</div>