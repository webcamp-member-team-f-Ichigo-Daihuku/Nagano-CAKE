<div class = "container">
  <div class = "row">
    <div class = "col-md-8 mx-auto">
      <h5>商品詳細</h5>
    </div>
  </div>
  <div class = "row mt-3">
    <div class = "col-md-3 offset-md-3">
      <table>
        <thead>
          <tr>
            <td><%= image_tag @item.get_item_image(200,200) %></td>
          </tr>
        </thead>
      </table>
    </div>
    <div class = "col-md-6 mt-3">
      <table>
        <tbody>
          <tr>
            <td>商品名</td>
            <td class = "px-3"><%= @item.name %></td>
          </tr>
          <tr>
            <td>商品説明</td>
            <td class = "px-3"><%= @item.introduction %></td>
          </tr>
          <tr>
            <td>ジャンル</td>
            <td class = "px-3"><%= @item.genre.name %></td>
          </tr>
          <tr>
            <td>税込価格<br>（税抜価格）</td>
            <td class = "px-3"><%= number_with_delimiter(@item.with_tax_price, delimiter: ',') %>（<%= number_with_delimiter(@item.price, delimiter: ',') %>）円</td>
          </tr>
          <tr>
            <td>商品ステータス</td>
            <td class = "px-3">
              <% if @item.is_active == true %>
                <span class = "text-success"><strong>販売中</strong></span>
              <% else %>
                <span class = "text-muted"><strong>販売停止中</strong></span>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class = "col text-center mt-3">
    <%= link_to "編集する", edit_admin_item_path, class: "btn btn-success" %>
  </div>
</div>