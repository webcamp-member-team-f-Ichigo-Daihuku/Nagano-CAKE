<div class = "container">
  <div class = "row">
    <div class = "col-md-8 mx-auto">
      <h5>商品新規登録</h5>
    </div>
  </div>
  <div class = "row">
    <div class = "col-md-6 mx-auto">
      <%= form_with model: @item, url: admin_items_path, method: :post do |f| %>
      <div class = "form-group">
        <div class = "row mt-3">
          <div class = "col-3">
            <%= f.label :商品画像 %>
          </div>
          <div class = "col-9">
            <%= f.file_field :item_image, accept: "image/*" %>
          </div>
        </div>
        <div class = "row mt-2">
          <div class = "col-3">
            <%= f.label :商品名 %>
          </div>
          <div class = "col-9">
            <%= f.text_field :name, class: "form-control name" %>
          </div>
        </div>
        <div class = "row mt-2">
          <div class = "col-3">
            <%= f.label :商品説明 %>
          </div>
          <div class = "col-9">
            <%= f.text_area :introduction, class: "form-control introduction" %>
          </div>
        </div>
        <div class = "row mt-2">
          <div class = "col-3">
            <%= f.label :ジャンル %>
          </div>
          <div class = "col-9">
            <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択して下さい" %>
          </div>
        </div>
        <div class = "row mt-2">
          <div class = "col-3">
            <%= f.label :税抜価格 %>
          </div>
          <div class = "col-8">
            <%= f.text_field :price, class: "form-control price" %>
          </div>
          <div class = "col-1">
            <span>円</span>
          </div>
        </div>
        <div class = "row mt-2">
          <div class = "col-3">
            <%= f.label :販売ステータス %>
          </div>
          <div class = "col-9">
            <div class = "custom-control custom-radio custom-control-inline">
              <%= f.radio_button :is_active, true, checked: @item.is_active == true, class: 'custom-control-input', id: 'is_active-true' %>
              <%= f.label :is_active, '販売中', class: 'custom-control-label', for: 'is_active-true' %>
            </div>
            <div class = "custom-control custom-radio custom-control-inline">
              <%= f.radio_button :is_active, false, checked: @item.is_active == false, class: 'custom-control-input', id: 'is_active-false' %>
              <%= f.label :is_active, '販売停止中', class: 'custom-control-label', for: 'is_active-false' %>
            </div>
          </div>
        </div>
        <div class = "actions text-center mt-3">
          <%= f.submit "新規登録", class: "btn btn-success" %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>