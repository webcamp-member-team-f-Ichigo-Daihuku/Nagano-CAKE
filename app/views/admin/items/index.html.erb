<table class="table table-hover table-inverse">
  <div class="container">
    <div class="row">
      <h5>商品一覧</h5>
      <%= link_to new_admin_item_path do %>
        <button type="button" class="btn btn-light rounded-circle p-0" style="width:2rem;height:2rem;">
          <i class="fa-solid fa-plus"></i>
        </button>
      <% end %>
      <thead>
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
          <th colspan="5"></th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td><%= link_to item.name, admin_item_path(item) %></td>
          <td><%= item.price %></td>
          <td><%= item.genre_id %></td>
          <td>
            <% if item.is_active == 'on_sale' %>
              <span class="text-success"><strong>販売中</strong></span>
            <% else %>
              <span class="text-muted"><strong>販売停止中</strong></span>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </div>
  </div>
</table>
<%= paginate @items %>

