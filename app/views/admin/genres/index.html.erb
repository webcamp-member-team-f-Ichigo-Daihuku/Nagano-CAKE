<div class = "container">
  <div class = "row">
    <div class = "col-md-8 mx-auto">
      <div class = "row">

      <div class="col-md-12">
        <h4>ジャンル一覧・追加</h4>
      </div>
       
      <div class="col-md-12">
        <%=form_with model: @genre,url: admin_genres_path, method: :post do |f| %>
        
        <td><%= f.label :"ジャンル名", class: "mr-3" %></td>
        <td><%= f.text_field :name, class: "mr-5" %></td>
        <td><%= f.submit'新規登録', class:"btn btn-primary" %></td>
        
        <% end %>
        
        
         <div class="container">
            <table class = "table table-hover table-inverse mt-3">
             <thead>
              <tr>
                <th>ジャンル</th>
                <th></th>
              </tr>
             </thead>
              <tbody>
                <% @genres.each do |genre| %>
                <tr>
                <td><%= genre.name %></td>
                <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn-success" %></td>
                </tr>
               <% end %>
              </tbody>
            </table>
          <%= paginate @genres %>
         </div>
      </div>
      
       </div>
     </div>
   </div>
 </div>