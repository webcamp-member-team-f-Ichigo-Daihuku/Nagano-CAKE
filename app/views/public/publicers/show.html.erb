<div class="container">
  <div class="row">
    <div class="col">
      <h4 class="my-5">マイページ</h4>
      <div class="d-flex align-items-center">
        <h3><b>登録情報</b></h3>
        <%= link_to "編集する", edit_public_publicer_path(@publicer), class:"btn btn-success ml-3" %>
      </div>
      <table class="table table-bordrless">
        <tr>
          <th>氏名</th>
          <td><%= @publicer.last_name %> <%= @publicer.first_name %></td>
        </tr>
        <tr>
          <th>カナ</th>
          <td><%= @publicer.last_name_kana %> <%= @publicer.first_name_kana %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= @publicer.postal_code %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= @publicer.address %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= @publicer.telephone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @publicer.email %></td>
        </tr>
      </table>
      <div class="d-flex align-items-center">
        <h3><b>配送先</b></h3>
        <%#= link_to "一覧を見る", "#", class:"btn btn-primary ml-3" %>
      </div>
      <div class="d-flex align-items-center">
        <h3><b>注文履歴</b></h3>
        <%#= link_to "一覧を見る", "#", class:"btn btn-primary ml-3" %>
      </div>
    </div>
  </div>
</div>

