<h5>ショッピングカート</h5>
  <table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <%= link_to "カートを空にする",destroy_all_cart_items_path, method: :delete, class: "btn btn-sm btn-danger" %>
  <% @cart_items.each do |cart_item| %>
    <tr>
      <td><%= image_tag cart_item.item.item_image.get_item_image(50,50) %></td>
      <td><%= cart_item.item.name %></td>
      <td><%= cart_item.item.with_tax_price %></td>
    </tr>
  </tbody>
  </table>
  <table>
  <thead>
    <tr>
      <td>
      <%= form_with model: cart_item, url: cart_item_path(cart_item.id) do |f| %>
        <%= f.select :amount, (1..10) %>
        <%= f.submit "変更", class: "btn btn-success" %>
      <% end %>
      </td>
      <td><%= cart_item.subtotal %></td>
      <% @total = @total + cart_item.subtotal %>
      <td><%= link_to "削除する",cart_item_path(cart_item.id), method: :delete, class: "btn btn-sm btn-danger" %></td>
    </tr>
  <% end %>
  </tbody>
  <th><%= link_to "買い物を続ける",root_path, class: "btn btn-sm btn-primary" %></th>
  <th>合計金額</th>
  <th><%= @total %></th>
  <th>
    <%= link_to "入力画面に進む",new_order_path, class: "btn btn-sm btn-success" %>
  </th>
</table>
