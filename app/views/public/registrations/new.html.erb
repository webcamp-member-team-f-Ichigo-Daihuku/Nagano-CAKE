<h2>新規会員登録</h2>
  <%= form_with model: @public, url: public_registration_path do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :名前 %><br />
    <%= f.label :"(姓)" %><br />
    <%= f.text_field :last_name, autofocus: true, autocomplete: "email" %><br />
    <%= f.label :"(名)" %><br />
    <%= f.text_field :first_name, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :フリガナ %><br />
    <%= f.label :"(セイ)" %><br />
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "email" %><br />
    <%= f.label :"(メイ)" %><br />
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :"郵便番号(ハイフンなし)" %><br />
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :住所 %><br />
    <%= f.text_field :address, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :"電話番号（ハイフンなし）" %><br />
    <%= f.text_field :telephone_number, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    (<%= @minimum_password_length %> 文字以上)
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :"パスワード（確認用）" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<h2>既に登録済みの方</h2>
<h5><%= link_to "こちら", new_public_session_path %>　からログインしてください。</h5>