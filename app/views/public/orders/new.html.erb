<div class="container p-3 address">
  <div class="row">
    <div class="col-md-12">
      <h3><strong>注文情報入力</strong><i class="fa-solid fa-pen"></i></h3>
      <%= form_with model: @order, url: public_orders_confirm_path, method: :post do |f| %>
        <br>
        <h5>支払い方法</h5>
        <%= f.radio_button :payment_method, :credit_card, checked: true %>
        <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card], {value: :credit_card} %>
        <br>
        <%= f.radio_button :payment_method, :transfer %>
        <%= f.label :payment_method, Order.payment_methods_i18n[:transfer], {value: :transfer} %>


        <div>
          <h5>お届け先</h5>
          <%= f.radio_button :address_type, "public_address", checked: true %>
          <%= f.label :address_type, "ご自身の住所" %>
          <br>
          〒<%= current_public.postal_code %><br> <%= current_public.address + " " + current_public.last_name + " " + current_public.first_name%>
        </div>
        <br>
        <%= f.radio_button :address_type, ":registered_address" %>
        <%= f.label :address_type, "登録済住所から選択" %>
        <%= f.select :registered_address_id, current_public.addresses.all.map { |m| [[m.postal_code, m.address, m.name].join(" "), m.id] } ,include_blank: "登録してある配送先住所から選択" %>
        <br>
        <%= f.radio_button :address_type, "new_address" %>
        <%= f.label :address_type, "新しいお届け先" %>
        <table>
          <tr>
            <td>郵便番号(ハイフンなし)</td>
            <td><%= f.text_field :new_postal_code %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%= f.text_field :new_address %></td>
          </tr>
          <tr>
            <td>宛名</td>
            <td><%= f.text_field :new_name %></td>
          </tr>
        </table>
        <%= f.submit "確認画面へ進む", class: "btn btn-info" %>
      <% end %>
    </div>
  </div>
</div>