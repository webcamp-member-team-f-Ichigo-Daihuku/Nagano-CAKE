<div class="container p-3 address">
  <div class="row">
    <div class="col-md-12">
      <h3><i class="fa-solid fa-clipboard"></i> <strong>注文情報確認</strong></h3>
      <table class="table">
        <tr>
          <br>
          <td>商品名</td>
          <td>単価</td>
          <td>数量</td>
          <td>小計</td>
        </tr>
        <% @cart_items.each do |cart_item| %>
          <tr>
            <td>
              <%= image_tag cart_item.item.item_image, size: "50x50" %>
              <strong><%= cart_item.item.name %></strong>
            </td>
            <td>¥<%= number_with_delimiter(cart_item.item.with_tax_price, delimiter: ',') %></td>
            <td><%= cart_item.amount %></td>
            <td>¥<%= number_with_delimiter(cart_item.item.with_tax_price * cart_item.amount, delimiter: ',') %></td>
          </tr>
        <% end %>
      </table>
      <table class="table">
        <tr>
          <td>送料</td>
          <td>¥<%= @shipping_cost %></td>
        </tr>
        <tr>
          <td>商品合計</td>
          <td>
            ¥<%= number_with_delimiter(@cart_items_price, delimiter: ',') %></td>
        </tr>
        <tr>
          <td>請求額</td>
          <td>¥<%= number_with_delimiter(@total_price, delimiter: ',') %></td>
        </tr>
      </table>
      <h4>〈支払い方法〉</h4>
      <% if @order.payment_method == "credit_card" %>
      クレジットカード
      <% else %>
      銀行振込
      <% end %>
      <%#= f.select :order_status, Order.order_statuses_i18n.invert, {prompt: false}, class:"form-control form-control-sm col-6" %>
　　　　<br>
      <h4>〈お届け先〉</h4>
      <%= @selected_postal_code %><br>
      <%= @selected_address %>
      <%= form_with model: @order do |f| %>

      <%= f.hidden_field :public_id %>
      <%= f.hidden_field :shipping_cost %>
      <%= f.hidden_field :total_payment %>
      <%= f.hidden_field :payment_method %>
      <%= f.hidden_field :status %>
      <%= f.hidden_field :address, :value => @order.address %>
      <%= f.hidden_field :postal_code, :value => @order.postal_code %>
      <%= f.hidden_field :name, :value => @order.name %>




        <div class="actions text-center">
          <%= f.submit "注文を確定する", class: "btn btn-primary submit_to_create_order" %>
        </div>
      <% end %>
    </div>
  </div>
</div>