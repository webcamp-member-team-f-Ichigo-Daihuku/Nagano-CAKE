<div class="container p-3">
  <div class="row">
    <div class="col-md-12">
      <h3>注文情報確認</h3>
      <table class="table">
        <tr>
          <td>商品名</td>
          <td>単価</td>
          <td>数量</td>
          <td>小計</td>
        </tr>
        <% @cart_items.each do |cart_item| %>
          <tr>
            <td>
              <%= image_tag cart_item.item.image, size: "100x80" %>
              <strong><%= cart_item.item.name %></strong>
            </td>
            <td><%= cart_item.item.price %></td>
            <td><%= cart_item.amount %></td>
            <td><%= cart_item.item.price*cart_item.amount %></td>
          </tr>
        <% end %>
      </table>
      <table class="table">
        <tr>
          <td>送料</td>
          <td><%= @shipping_cost %></td>
        </tr>
        <tr>
          <td>商品合計</td>
          <td><%= @cart_items_price %></td>
        </tr>
        <tr>
          <td>請求額</td>
          <td><%= @total_price %></td>
        </tr>
      </table>
      <h4>支払い方法</h4>
      <% if @order.payment_method == "credit_card" %>
      クレジットカード
      <% else %>
      銀行振込
      <% end %>
      <%#= f.select :order_status, Order.order_statuses_i18n.invert, {prompt: false}, class:"form-control form-control-sm col-6" %>
      <h4>お届け先</h4>
      <%= @selected_address %>
      <%= form_with model: @order, url: orders_path do |f| %>
        <div class="field">
          <%= f.label :payment_method, "支払い方法" %>
          <p><%= @order.payment_method_i18n %></p>
          <%= f.hidden_field :payment_method, value: @order.payment_method %>
        </div>
        <div class="field">
          <label>お届け先</label>
          <p>〒<%= @order.postal_code %> <br><%= @order.name %></p>
          <%= f.hidden_field :address_type, value: @address_type %>
          <%= f.hidden_field :postal_code, value: @postal_code %>
          <%= f.hidden_field :address, value: @address %>
          <%= f.hidden_field :name, value: @order.name %>
        </div>
        <div class="actions text-center">
          <%= f.submit "注文を確定する", class: "btn btn-primary submit_to_create_order" %>
        </div>
      <% end %>
    </div>
  </div>
</div>