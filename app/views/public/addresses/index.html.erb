<h1>配送先登録/一覧</h1>
<%= form_with model: @address, url: public_addresses_path do |f| %>
<h4>郵便番号(ハイフンなし)</h4>
<%= f.text_field :postal_code %>
<h4>住所</h4>
<%= f.text_field :address %>
<h4>宛名</h4>
<%= f.text_field :name %>
<%= f.submit '新規登録' %>
<% end %>
<table>
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th colspan="4"></th>
    </tr>
  </thead>
  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td>
          <span><%= address.postal_code %></span>
        </td>
        <td>
          <span><%= address.address %></span>
        </td>
        <td>
          <span><%= address.name %></span>
        </td>
        <td>
          <span>
            <%= link_to "編集する", edit_public_address_path(address.id) %>
          </span>
        </td>
        <td>
          <span>
            <%= link_to "削除する", public_address_path(address.id), method: :delete %>
          </span>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>