<div class = "container px-5 px-sm-0">
  <div class = "row">
    <div class = "col-md-2 offset-md-1">
      <%= render 'admin/genres/searth', genres: @genres %>
    </div>
    <div class = "col-md-8">
<table>
  <thead>
    <h2><strong>商品一覧</strong></h2>
    <th>（全<%= @items.count %>件）</th>
  </thead>
</table>
<strong><table class = "mt-3">
  <tbody>
  <% @items.each do |item| %>
  <tr>
    <th>
    <%= link_to item_path(item) do %>
      <%= image_tag item.get_item_image(100, 100) %>
    <% end %>
    </th>
  </tr>
  <tr>
    <td><%= item.name %></td>
  </tr>
  <tr>
    <td>¥<%= item.with_tax_price %></td>
  </tr>
<% end %>
</tbody>
</table></strong>
</div>
</div>
</div>
<%= paginate @item %>