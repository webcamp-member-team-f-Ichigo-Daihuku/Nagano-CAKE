<div class = "container px-5 px-sm-0">
  <div class = "row">
    <div class = "col-md-2 offset-md-1">
      <%= render 'admin/genres/searth', genres: @genres %>
    </div>
    <div class = "col-md-9">
      <table>
        <thead>
          <h2><strong>商品一覧</strong></h2>
          <th>全<%= @items_count %>件</th>
        </thead>
      </table>
      <table class = "mt-3">
        <tbody>
          <% @items.each_slice(4) do |row| %>
            <tr>
              <% row.each do |item| %>
                <th>
                  <%= link_to item_path(item) do %>
                    <%= image_tag item.get_item_image(150, 150) %>
                  <% end %><br>
                  <%= item.name %><br>
                  ¥<%= number_with_delimiter(item.with_tax_price, delimiter: ',') %>
                </th>
               <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class = "col-md-9 d-flex justify-content-center">
        <%= paginate @items %>
      </div>
    </div>
  </div>
</div>